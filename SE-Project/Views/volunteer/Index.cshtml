
@{
    ViewBag.Title = "Volunteer";
}

<h2>Volunteer Control page</h2>

<body>
    <div id="largebox">
        <div id="mapbox">
             
            <p>map and address/radius stuff</p>

             <form style="float:initial">
                  <input type="radio" name="SeachRadius" value="1"> 1 Mile <br> 
                  <input type="radio" name="SeachRadius" value="2"> 2 Miles <br>
             </form>
             <div id="googleMap" style="width:100%;height:400px;"></div>

             <script>
                  function myMap() {

                    var mapProp = {
                         center: new google.maps.LatLng(34.999247, -81.971272),
                         zoom: 14, //14 is enough to see a 1 mile radius around the center
                         mapTypeId: google.maps.MapTypeId.HYBRID
                    };

                    var marker = new google.maps.Marker({
                         position: mapProp.center,
                         animation: google.maps.Animation.BOUNCE
                    });

                    var myArea = new google.maps.Circle({
                         center: mapProp.center,
                         radius: 1609.34, //Distance in meters : 1609.34 meters = 1 mile, 3218.69 meters = 2 miles
                         strokeColor: "#0000FF",
                         strokeOpacity: 0.8,
                         strokeWeight: 2,
                         fillColor: "#0000FF",
                         fillOpacity: 0.4
                    });
                    
                  
                    var map = new google.maps.Map(document.getElementById("googleMap"), mapProp,);
                    marker.setMap(map);
                    myArea.setMap(map);
                  }
             </script>

             <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBsV_j3UnupXN7XKDIIldbskUI8IbhnNuw&callback=myMap"></script>

        </div>
        <div id="listbox">

            <p>List of jobs inside your search area</p>

        </div>

        <div id="jobsbox">

            <p>List of jobs that have been signed up for</p>

        </div>

    </div>
    <a href="@Url.Action("LogOut","users")">Logout</a>
</body>

