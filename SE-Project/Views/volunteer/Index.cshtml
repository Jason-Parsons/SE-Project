             <div id="googleMap" style="width:425px;height:275px;margin-left:12px"></div>

             <script >
                  function myMap() {

                    var mapProp = {
                         center: new google.maps.LatLng(34.999247, -81.971272),
                         zoom: 13, //14 is enough to see a 1 mile radius around the center
                         mapTypeId: google.maps.MapTypeId.HYBRID
                    };

                    var marker = new google.maps.Marker({
                         position: mapProp.center,
                         animation: google.maps.Animation.BOUNCE
                    });

                    var myArea = new google.maps.Circle({
                         center: mapProp.center,
                         radius: 1609.34, //Distance in meters : 1609.34 meters = 1 mile, 3218.69 meters = 2 miles
                         strokeColor: "#0000FF",
                         strokeOpacity: 0.8,
                         strokeWeight: 2,
                         fillColor: "#0000FF",
                         fillOpacity: 0.4
                    });
                    
                  
                    var map = new google.maps.Map(document.getElementById("googleMap"), mapProp,);
                    marker.setMap(map);
                    myArea.setMap(map);
                  }
             </script>

             <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBsV_j3UnupXN7XKDIIldbskUI8IbhnNuw&callback=myMap"></script>

