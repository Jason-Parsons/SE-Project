@model IEnumerable<SE_Project.Models.userJob>

@{
     if (Session["userID"] == null)
     {
          Response.Redirect("~/users/login");
     }
}
 
@{
    ViewBag.Title = "Index";
}

<h2>Welcome @Session["userName"].ToString()</h2>
<h2>Index</h2>

<p>
    @Html.ActionLink("Sign up for a job", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.job.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.user.FirstName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.job.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user.FirstName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.UserJobID }) |
            @Html.ActionLink("Details", "Details", new { id=item.UserJobID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.UserJobID })
        </td>
    </tr>
}

</table>
<a href="@Url.Action("LogOut","users")">Logout</a>
